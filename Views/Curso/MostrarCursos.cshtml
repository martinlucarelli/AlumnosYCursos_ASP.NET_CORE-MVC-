
@model List<Curso>
@{
    ViewData["Title"] = "MostrarCursos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card">
    <div class="card-body">
        <a asp-action="AgregarCurso" asp-controller="Curso" class="btn btn-success">Nuevo curso</a>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Curso</th>
                    <th scope="col">Carga Horaria</th>
                    <th scope="col">Descripcion</th>
                </tr>
            </thead>
            <tbody>
              
                @foreach (var curso in Model)
                {
                    <tr>
                        <td></td>
                        <td>@curso.nombreCurso</td>
                        <td>@curso.cargaHoraria</td>
                        <td>@curso.descripcionCurso</td>
                        <td>
                            <a asp-action="ModificarCurso" asp-controller="Curso" asp-route-id="@curso.idCurso" class="btn btn-warning" onmouseover="Editar">Editar</a>
                            <a asp-action="EliminarCurso" asp-controller="Curso" asp-route-id="@curso.idCurso" class="btn btn-danger">Eliminar</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>


    </div>
</div>
